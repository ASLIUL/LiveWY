<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/limit_size_10dp"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/limit_size_50dp"
        android:layout_height="@dimen/limit_size_50dp"
        android:scaleType="centerInside"
        app:bl_solid_color="@color/c66000000"
        app:bl_corners_radius="@dimen/limit_size_25dp"
        android:padding="@dimen/limit_size_2dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/limit_size_5dp"
        />

</LinearLayout>