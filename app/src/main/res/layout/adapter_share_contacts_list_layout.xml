<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/show_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/is_check"
            android:layout_width="@dimen/limit_size_20dp"
            android:layout_height="@dimen/limit_size_20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/limit_size_10dp"
            android:src="@drawable/ic_not_checked_blue"
            />


        <com.yb.livewy.view.CustomRoundView
            android:id="@+id/friend_header"
            android:layout_width="@dimen/limit_size_40dp"
            android:layout_height="@dimen/limit_size_40dp"
            android:src="@drawable/ic_normal_header"
            android:layout_marginStart="@dimen/limit_size_15dp"
            android:layout_marginTop="@dimen/limit_size_8dp"
            android:layout_marginBottom="@dimen/limit_size_8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/is_check"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/limit_size_20dp"
            android:layout_toRightOf="@id/friend_header"
            android:layout_marginTop="@dimen/limit_size_10dp"
            android:layout_marginLeft="@dimen/limit_size_16dp"
            android:layout_marginBottom="@dimen/limit_size_10dp"
            android:gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_18sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/limit_size_05dp"
        android:background="@color/view_dividing_line"
        />





</LinearLayout>