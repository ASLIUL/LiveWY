<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/limit_size_50dp"
    android:id="@+id/rela_bg"
    android:paddingLeft="@dimen/limit_size_20dp"
    android:paddingRight="@dimen/limit_size_20dp"
    android:clickable="true"
    >
    
    <TextView
        android:id="@+id/left_tv"
        android:layout_width="@dimen/limit_size_30dp"
        android:layout_height="@dimen/limit_size_50dp"
        android:text=""
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/left_img"
        android:layout_width="@dimen/limit_size_30dp"
        android:layout_height="@dimen/limit_size_30dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_left_point_line_black"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/centre_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:hint=""
        android:inputType="text"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/limit_size_20dp"
        android:layout_marginLeft="@dimen/limit_size_20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/centre_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/limit_size_50dp"
        android:layout_weight="4"
        android:text=""
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/font_size_18sp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/limit_size_50dp"
        android:text=""
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/font_size_18sp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/right_img"
        android:layout_width="@dimen/limit_size_20dp"
        android:layout_height="@dimen/limit_size_20dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_right_menu_black"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>