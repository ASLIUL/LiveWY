<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/limit_size_5dp"
    android:layout_margin="@dimen/limit_size_10dp"
    app:bl_corners_radius="@dimen/limit_size_10dp"
    app:bl_solid_color="@color/live_icon_bg"
    >


    <ImageView
        android:id="@+id/level_img"
        android:layout_width="@dimen/limit_size_30dp"
        android:layout_height="@dimen/limit_size_10dp"
        android:visibility="gone"
        android:src="@drawable/ic_vip_one_colour"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="小明"
        android:textColor="@color/forgot_password_color"
        android:layout_marginStart="@dimen/limit_size_5dp"
        android:layout_marginEnd="@dimen/limit_size_5dp"
        android:textSize="@dimen/font_size_15sp"
        />

    <TextView
        android:id="@+id/msg_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="skkjfdbdkdjfnkvjhxcnvkdnkjfv"
        android:textSize="@dimen/font_size_15sp"
        android:textColor="@color/white"
        />

</LinearLayout>